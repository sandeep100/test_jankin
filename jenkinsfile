pipeline{
	agent any

	stages{
	  stage ('compile stage') {
        steps {
          withMaven(maven : 'maven_2.2.1') {
            sh 'mvn clean compile'
          }
        }
	  }

	  stage ('Testing stage') {
        steps {
          withMaven(maven : 'maven_2.2.1') {
            sh 'mvn test'
          }
        }
	  }

	  stage ('Deployment stage') {
        steps {
          withMaven(maven : 'maven_2.2.1') {
            sh 'mvn deploy'
          }
        }
	  }

	}
}
